{
  "name": "nlcst-affix-emoticon-modifier",
  "version": "1.1.4",
  "description": "nlcst utility to merge affix emoticons into the previous sentence",
  "license": "MIT",
  "keywords": [
    "unist",
    "nlcst",
    "nlcst-util",
    "util",
    "utility",
    "affix",
    "emoticon"
  ],
  "repository": "syntax-tree/nlcst-affix-emoticon-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-affix-emoticon-modifier/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "unist-util-modify-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "nlcst-emoji-modifier": "^4.0.0",
    "nlcst-emoticon-modifier": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "retext-english": "^3.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "unified": "^9.0.0",
    "unist-util-remove-position": "^3.0.0",
    "xo": "^0.34.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "build-bundle": "browserify . -s nlcstAffixEmoticonModifier > nlcst-affix-emoticon-modifier.js",
    "build-mangle": "browserify . -s nlcstAffixEmoticonModifier -p tinyify -o nlcst-affix-emoticon-modifier.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignore": [
      "nlcst-affix-emoticon-modifier.js"
    ],
    "rules": {
      "unicorn/explicit-length-check": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
