{
  "name": "nlcst-affix-emoticon-modifier",
  "version": "1.0.0",
  "description": "Merge affix emoticons into the previous sentence in NLCST",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "affix",
    "emoticon"
  ],
  "dependencies": {
    "unist-util-modify-children": "^1.0.0"
  },
  "repository": "wooorm/nlcst-affix-emoticon-modifier",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "istanbul": "^0.4.0",
    "mocha": "^3.0.0",
    "nlcst-emoji-modifier": "^1.0.0",
    "nlcst-emoticon-modifier": "^1.0.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^1.0.0",
    "retext-english": "^2.0.0",
    "unified": "^5.1.0",
    "unist-util-remove-position": "^1.1.0",
    "xo": "^0.17.1"
  },
  "scripts": {
    "test-api": "mocha --check-leaks test/index.js",
    "test-coverage": "istanbul cover _mocha -- test/index.js",
    "test-travis": "npm run test-coverage",
    "test": "npm run test-api",
    "lint": "xo",
    "make": "npm run lint && npm run test-coverage",
    "bundle": "browserify index.js --no-builtins -s nlcstAffixEmoticonModifier > nlcst-affix-emoticon-modifier.js",
    "postbundle": "esmangle nlcst-affix-emoticon-modifier.js > nlcst-affix-emoticon-modifier.min.js",
    "build-md": "remark . --quiet --frail --output",
    "build": "npm run bundle && npm run build-md"
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    },
    "ignore": [
      "nlcst-affix-emoticon-modifier.js"
    ]
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
