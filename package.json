{
  "name": "nlcst-affix-emoticon-modifier",
  "version": "1.1.1",
  "description": "Merge affix emoticons into the previous sentence in NLCST",
  "license": "MIT",
  "keywords": [
    "nlcst",
    "affix",
    "emoticon"
  ],
  "repository": "syntax-tree/nlcst-affix-emoticon-modifier",
  "bugs": "https://github.com/syntax-tree/nlcst-affix-emoticon-modifier/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "unist-util-modify-children": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "esmangle": "^1.0.0",
    "nlcst-emoji-modifier": "^2.0.1",
    "nlcst-emoticon-modifier": "^1.0.0",
    "nyc": "^11.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "retext-english": "^3.0.0",
    "tape": "^4.6.2",
    "unified": "^6.1.5",
    "unist-util-remove-position": "^1.1.0",
    "xo": "^0.20.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s nlcstAffixEmoticonModifier > nlcst-affix-emoticon-modifier.js",
    "build-mangle": "esmangle < nlcst-affix-emoticon-modifier.js > nlcst-affix-emoticon-modifier.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "no-var": "off",
      "prefer-arrow-callback": "off",
      "guard-for-in": "off"
    },
    "ignore": [
      "nlcst-affix-emoticon-modifier.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
